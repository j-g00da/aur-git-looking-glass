pkgname='jaguar-bin'
pkgver=1.56.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('e0c0df2427d7e80c56381bb7d464a0d3add719b5547cd5846150d0cde8333d9f')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
