pkgname='jaguar-bin'
pkgver=1.55.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('47e907bbab1af51c799f272a0d464e3d356c5edd0f4d89c694ba6c4ddcf34fe9')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
