# Maintainer : MorsMortium <morsmortium@disroot.org>

_pkgname=luajit-sdl3
pkgname=${_pkgname}-git
pkgver=r15.9c0b802
pkgrel=1
pkgdesc='Autogenerated LuaJIT bindings for SDL3 with threads and audio'
arch=('any')
url="https://github.com/sonoro1234/${_pkgname}"
license=('MIT')
depends=('luajit' 'sdl3')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
makedepends=('git')
sha512sums=('SKIP')
source=("${pkgname}::git+${url}.git")

pkgver() {
  cd "${srcdir}/${pkgname}"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short=7 HEAD)"
}

package() {
  cd "${srcdir}/${pkgname}"
  mkdir -p ${pkgdir}/usr/share/luajit-2.1/
  install -Dm 644 sdl3_ffi.lua ${pkgdir}/usr/share/luajit-2.1/
}
