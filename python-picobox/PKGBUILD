pkgname=python-picobox
_pkgname=picobox
pkgver=4.0.0
pkgrel=1
pkgdesc="Dependency injection framework designed with Python in mind."
arch=(any)
url="https://pypi.org/project/picobox/"
license=('MIT')
makedepends=("python" "python-pip")
build() {
  pip install --no-deps --target="${_pkgname}" $_pkgname==$pkgver
}
package() {
  sitepackages=$(python -c "import site; print(site.getsitepackages()[0])")
  mkdir -p $pkgdir/"$sitepackages"
  cp -r $srcdir/picobox/* $pkgdir/"$sitepackages"
}

