pkgname=python-promnesia
pkgver=1.2.20230515
pkgrel=1
pkgdesc="Enhancement of your browsing history"
arch=(any)
url="https://github.com/karlicoss/promnesia"
license=(UNKNOWN)
makedepends=("python" "python-pip")
build() {
  pip install --no-deps --target="promnesia" promnesia==$pkgver
}
package() {
  sitepackages=$(python -c "import site; print(site.getsitepackages()[0])")
  mkdir -p $pkgdir/"$sitepackages"
  cp -r $srcdir/promnesia/* $pkgdir/"$sitepackages"
}
