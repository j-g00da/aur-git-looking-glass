prepare() {
    mv ${srcdir}/Adamant_BG_OT/*.otf "${srcdir}/"
    mv 'Adamant_ BG_BI.otf' 'Adamant_BG_BI.otf'
    mv ${srcdir}/InfluBG/*.otf "${srcdir}/"
    mv ${srcdir}/LingvaRNIDS-otf/*.otf "${srcdir}/"
    mv ${srcdir}/OrtoRNIDS-otf/*.otf "${srcdir}/"
}
            
package() {
    cd "${srcdir}"
    install -Dm644 -t "${pkgdir}/usr/share/fonts/OTF" "${_fonts[@]}"
    install -Dm644 -t "${pkgdir}/usr/share/licenses/${pkgname}" 'LICENSE' 'LICENSE_sr'
}
