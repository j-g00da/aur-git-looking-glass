pkgname=ptui-bin
pkgver=1.0.9
pkgrel=1
pkgdesc="Picture TUI"
url="https://github.com/narbs/ptui"
license=("MIT")
arch=("x86_64")
provides=("ptui")
conflicts=("ptui")
depends=("chafa" "imagemagick")
source=("https://github.com/narbs/ptui/releases/download/v$pkgver/ptui-$pkgver-x86_64.tar.gz")
sha256sums=("7e918b6e7da7c4f4ad9c2cac0268c18ad7bf1d5747160f1bfcf153bb9e5026fa")

package() {
    install -Dm755 ptui -t "$pkgdir/usr/bin"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 "README.md" "$pkgdir/usr/share/doc/ptui/README.md"
    install -Dm644 "NEWS.md" "$pkgdir/usr/share/doc/ptui/NEWS.md"
    install -Dm644 "CHANGELOG.md" "$pkgdir/usr/share/doc/ptui/CHANGELOG.md"
}
