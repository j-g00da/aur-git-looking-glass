url='https://github.com/xremap/xremap'
arch=('x86_64' 'aarch64')
options=('!debug')
source=("LICENSE")
b2sums=('5caf7612d5d1e636a60ad68135f621413b3681e4cda0e2e5d5c76e05d3adf15bc7b5cc030c7b26270fa3dfef181456bfd07d1d3330008564f1e82921eef5d16a')
b2sums_x86_64=('40c9631e76759f9e7c3a586eafaa3ad4178d4d618ee3e416831870615e9973ec0da131aeb02696effe4ca4d5942b36835781a8d5398afdc7e53de5da7d46da26')
b2sums_aarch64=('4fca2ef34c1021e5b3e1c91641368a90e3ce05f8f3847267803be387b76285a25a860b94784de4d594841d3d01564eec2593c674f9e14c3dfdd07c8c53f8eca9')
source_x86_64=("$pkgname-$pkgver-x86_64.zip::https://github.com/xremap/xremap/releases/download/v$pkgver/xremap-linux-x86_64-kde.zip")
