# Maintainer: Andrew Anderson <aanderso@tcd.ie>
pkgname=lxdm-theme-elementary
pkgver=0.1
pkgrel=2
pkgdesc="elementaryOS theme for LXDM"
arch=('any')
license=('CC')
url="https://github.com/andrew-wja/lxdm-theme-elementary"
source=("https://github.com/andrew-wja/lxdm-theme-elementary/archive/master.zip")
md5sums=(SKIP)
sha1sums=(SKIP)
sha256sums=(SKIP)
sha512sums=(SKIP)

prepare() {
  /bin/true
}

build() {
  /bin/true
}

check() {
  /bin/true
}

package() {
  mkdir -p ${pkgdir}/usr/share/lxdm/themes/elementary
  cp ${srcdir}/lxdm-theme-elementary-master/* ${pkgdir}/usr/share/lxdm/themes/elementary
}
