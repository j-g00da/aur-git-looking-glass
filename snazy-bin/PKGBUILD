source_aarch64=("${pkgname}_${pkgver}_aarch64.tar.gz::https://github.com/chmouel/snazy/releases/download/0.58.1/snazy-v0.58.1-linux-arm64.tar.gz")
sha256sums_aarch64=('b101a5bebe63409c97a1e1bd4d29d5ac50234f5b3f8dd6e04c85b697a1b8ac2a')

