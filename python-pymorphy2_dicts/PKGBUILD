makedepends=("python" "python-pip")
build() {
  pip install --no-deps --target="pymorphy2_dicts" pymorphy2_dicts==$pkgver
}
package() {
  sitepackages=$(python -c "import site; print(site.getsitepackages()[0])")
  mkdir -p $pkgdir/"$sitepackages"
  cp -r $srcdir/pymorphy2_dicts/* $pkgdir/"$sitepackages"
}
