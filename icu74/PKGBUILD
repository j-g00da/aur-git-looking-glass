_pkgname=icu
_pkgmainver=74
_pkgminorver=2
pkgname="${_pkgname}${_pkgmainver}"
pkgver="${_pkgmainver}.${_pkgminorver}"
pkgrel=10
pkgdesc="International Components for Unicode library (legacy version ${_pkgmainver})."
arch=(
  'i486'
  'i686'
  'pentium4'
  'x86_64'
  'armv6h'
  'armv7h'
  'aarch64'
)
