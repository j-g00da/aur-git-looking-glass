# This PKGBUILD was generated by `cargo aur`: https://crates.io/crates/cargo-aur

pkgname=remux
pkgver=0.4.0
pkgrel=1
pkgdesc="A friendly command shortener for tmux"
url="https://git.sleeplessval.io/valerie/remux"
license=("MIT")
arch=("x86_64")
provides=("remux")
conflicts=("remux")
source=("https://git.sleeplessval.io/valerie/remux/archive/v$pkgver.tar.gz")
sha256sums=("bdecf59ff39158faeca5012986f04896ad97d44fd6fc8ee56e571dd20b264f18")

build() {
    cd "$srcdir/$pkgname"
    cargo build --release
}

package() {
    cd "$srcdir/$pkgname"
    install -Dm755 "target/release/$pkgname" -t "$pkgdir/usr/bin"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
