pkgname=python-sanjuuni
pkgver=0.1.1
pkgrel=1
pkgdesc="Converts images and videos into a format suitable for ComputerCraft, based on sanjuuni."
arch=(any)
url="https://pypi.org/project/sanjuuni/"
license=(GPL-2.0-or-later)
makedepends=("python" "python-pip" "python-setuptools")
build() {
  pip install --no-deps --target="sanjuuni" sanjuuni==0.1.1
}
package() {
  sitepackages=$(python -c "import site; print(site.getsitepackages()[0])")
  mkdir -p $pkgdir/"$sitepackages"
  cp -r $srcdir/sanjuuni/* $pkgdir/"$sitepackages"
}